@model List<PIV_PF_ProyectoFinal.ViewModels.ListaFacturas>

@{
    ViewBag.Title = "Registro de Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contenedor-opciones-index">
    <div class="Encabezado_Index_clientes">
        <div class="encabezado_clientes">
            <div class="titulos_clientes">
                <h1>Registro de facturas</h1>
                <h2>Accede fácil y organiza rápido tu stock</h2>
            </div>
            <img id="portada_registro_clientes" src="~/Media/registro_facturas.png" />
        </div>
    </div>

    <div class="contenedor_personal_medico">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <button class="btn btn-primary" onclick="window.location='@Url.Action("Create", "Facturacion")'">
                    <i class="bi bi-plus-circle"></i> Crear factura
                </button>
            </div>
            <a class="btn btn-secondary" href="/Home/Index">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Código de factura</th>
                        <th>Fecha de compra</th>
                        <th>Cliente</th>
                        <th>Método de pago</th>
                        <th>Monto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var factura in Model)
                    {
                        <tr>
                            <td>@factura.codigo_factura</td>
                            <td>@factura.fecha_compra.ToString("dd/MM/yyyy")</td>
                            <td>@factura.nombre_cliente</td>
                            <td>
                                @if (factura.metodo_pago == "Efectivo")
                                {
                                    <span class="badge bg-success">Efectivo</span>
                                }
                                else if (factura.metodo_pago == "Tarjeta")
                                {
                                    <span class="badge bg-info">Tarjeta</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@factura.metodo_pago</span>
                                }
                            </td>
                            <td>₡@factura.sub_total.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle"></i> No hay facturas registradas.
                <a href="@Url.Action("Create", "Facturacion")" class="alert-link">Crear una nueva factura</a>
            </div>
        }
    </div>
</div>