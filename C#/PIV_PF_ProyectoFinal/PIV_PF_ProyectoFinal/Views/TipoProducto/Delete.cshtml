@model PIV_PF_ProyectoFinal.ViewModels.TipoProducto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.ValorMensaje == 1 || ViewBag.ValorMensaje == 0)
{
    <div class="modal fade modal-custom" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header d-flex justify-content-between align-items-center">
                    <h4 class="modal-title">Mensaje</h4>
                    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="alert @(ViewBag.ValorMensaje == 1 ? "alert-success" : "alert-danger")">
                        @ViewBag.MensajeProceso
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@if (Model != null)
{
    <div class="resultado-busqueda-cliente">
        <form action="/TipoProducto/Delete" method="post">
            <input type="hidden" name="codigo_tipo" value="@Model.codigo_tipo" />
            <h2 class="mt-5">Detalles del registro</h2>
            <div class="grid-container-details-client">
                <div class="grid-item-details-client color-gris">

                    <div class="campo-cliente">
                        <label class="form-label">N° de código</label>
                        <span class="valor-dato">@Model.codigo_tipo</span>
                    </div>

                    <div class="campo-cliente">
                        <label class="form-label">Descripción</label>
                        <span class="valor-dato">@Model.descripcion</span>
                    </div>

                    
                </div>
                <div class="grid-item-foto-perfil">
                    @{
                        <img id="foto_perfil" src="~/Media/sgt_tipo.png" />
                    }
                </div>
                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Seguro que desea eliminar el tipo de producto: @Model.codigo_tipo?\nEsta acción es irreversible.')">
                    <i class="bi bi-trash"></i>Eliminar tipo de producto
                </button>
                <a class="btn btn-primary" href="@Url.Action("Index", "TipoProducto")">Volver</a>
            </div>

        </form>
    </div>
}

@if (Model == null)
{
    <h1 class="text-center my-5">Error al cargar el tipo de producto</h1>
}


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            @if (ViewBag.ValorMensaje == 1 || ViewBag.ValorMensaje == 0)
            {
                <text>
                $('#myModal').modal('show');
                </text>
            }
        });
    </script>
}


