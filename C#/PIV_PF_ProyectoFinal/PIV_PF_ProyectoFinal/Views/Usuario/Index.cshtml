
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<PIV_PF_ProyectoFinal.ViewModels.ListaUsuarios>

<div class="contenedor-opciones-index">
    <div class="Encabezado_Index_clientes">

        <div class="encabezado_clientes">
            <div class="titulos_clientes">
                <h1>Personal médico</h1>
                <h2>Organización y control total del equipo médico</h2>
            </div>
            <img id="portada_registro_clientes" src="~/Media/gestion_personal_medico.png" />
        </div>

    </div>

    <div class="contenedor_personal_medico">
        <div class="d-flex justify-content-between align-items-center">

            <button class="btn btn-primary" onclick="window.location='@Url.Action("Create", "Usuario")'">
                <i class="bi bi-person-add"></i> Agregar personal
            </button>
            <a class="btn btn-secondary" href="/Usuario/Seleccion">
                <i class="bi bi-arrow-left-circle"></i>Volver
            </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Correo electrónico</th>
                    <th>Tipo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.cedula </td>
                        <td>@u.nombre_completo</td>
                        <td>@u.correo_electronico</td>
                        <td>@u.tipo_usuario</td>
                        <td>@u.estado</td>
                        <td>
                            <div class="btn-group-table">
                                <a class="btn btn-warning" href="@Url.Action("Update", "Usuario", new { cedula = u.cedula })">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", "Usuario", new { cedula = u.cedula })">
                                    <i class="bi bi-trash"></i>
                                </a>
                                <a class="btn btn-info" href="@Url.Action("Details", "Usuario", new { cedula = u.cedula })">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>