@model PIV_PF_ProyectoFinal.ViewModels.ProductoVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <div class="d-flex justify-content-between align-items-center my-2" style="padding:20px;">
        <h1>Información del producto</h1>
        <div class="boton_volver_a_gestion">

            <button type="button" class="btn btn-primary" onclick="window.location='/Producto/Index'">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </button>
        </div>
    </div>
    <div class="grid-container-details-client">

        <div class="grid-item-details-client color-gris">
            <h2>Detalles del producto</h2>
            <div class="campo-cliente">
                <label class="nombre-dato">N° de código:</label>
                <span class="valor-dato">@Model.codigo_producto</span>
            </div>

            <div class="campo-cliente">
                <label class="nombre-dato">Tipo de producto:</label>
                <span class="valor-dato">@ViewBag.DescripcionTipoProducto</span>
            </div>

            <div class="campo-cliente">
                <label class="nombre-dato">Descripción:</label>
                <span class="valor-dato">@Model.descripcion</span>
            </div>

            <div class="campo-cliente">
                <label class="nombre-dato">Estado:</label>
                <span class="valor-dato">@Model.estado</span>
            </div>

            <div class="campo-cliente">
                <label class="nombre-dato">Precio:</label>
                <span class="valor-dato">₡@Model.precio</span>
            </div>
        </div>

        <div class="grid-item-foto-perfil">
            @{
                <img id="foto_perfil" src="~/Media/info_producto.png" />
            }

        </div>

    </div>


}

@if (Model == null)
{
    <h1 class="text-center my-5">Error al cargar el producto</h1>
}


